#![UC Move]

ext:External[pe]
gw:GameWorld
manager:EntityManager
player:Player
settings:GameSettings
physics:IPhsyicsEntity
vector2:Vector2

ext:gw.updateWithTouchInput(position)

gw:player=manager.getPlayer()

gw:player.reactToTouch(position)

[c:clarification GameSettings.getInstance().isMirroredMovement()]
 player:isMirroredMovement=settings.getInstance().isMirroredMovement()
[/c]

player:centerX=physics.getCenterX()
player:centerY=physics.getCenterY()

player:forcePostion=vector2.newVector(calculated using forcePosition and centerX and centerY)

player:force=vector2.newVector(calculated using forcePosition and centerX and centerY)

[c:alt If mirrored movement, then reverse the force]
 player:force=vector2.mul(-1)
[/c]

player:vector2.len()

player:vector2.mul()

player:physics.applyImpulse(force, forcePosition)
